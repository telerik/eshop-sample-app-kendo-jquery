<div class="k-card">	
	<a style="position: relative;" href="~/Products/Details?productId=#:Id#">
		<img class="k-card-image" src="@Url.Action("GetProductLargePhotoById", "Products")?photoId=#:PhotoId#" width="330" height="244" alt="#:Name# image" />
		# if(DiscountPct != 0) { #
			<span class="discount-pct">#:Number(DiscountPct) * 100#% off</span>
		# } #
	</a>
	<div class="k-card-body">
		<a style="text-decoration: none;" href="~/Products/Details?productId=#:Id#">
			<h5 style="color: black;">#:Name#</h5>
		</a>
		@{
			if (!Context.Request.Path.ToString().Contains("Home"))
			{
				<div class="avg-rating">
					<img class="rating-icon" src="~/images/star.svg" alt="star icon" />
					<span class="rating-text">#:AverageRating#/5</span> 
				</div>
			}
		}
		<div class="price-container">		
			<h5 class="card-price">#:kendo.toString(FinalPrice, "c")#</h5>
		</div>
		<div class="card-buttons">
			<button class="card-cart-button add-to-cart" id="addToCartButton_#=Id#" name="addToCartButton_#=Id#" type="button">Add to cart</button>			
			<button class="card-favorites-button add-to-favourites" id="addToFavoritesButton_#=Id#" name="addToFavoritesButton_#=Id#" type="button"></button>

		</div>
	</div>
</div>

<link rel="stylesheet" href="~/css/tile_product_card.css">