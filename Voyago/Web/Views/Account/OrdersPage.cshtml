
<div class="orders-container">
    <h4 class="orders-title">Orders</h4>
    <div id="orders-grid" class="profile-tabstrip"></div>
</div>  

<script>
$(document).ready(function(e) {
    var urlHref = 
    $("#orders-grid").kendoGrid({
        columns: [
            { field: "OrderNumber", template: '\\##=OrderNumber#' },
            { field: "OrderDate", format: "{0:MM/dd/yyyy HH:mm:ss tt}" },
            { field: "Total", format: '{0:c}' },
            { field: "Status", template: '#if(Status == 1){# In progress  #}else{# Completed #}#' },
            { template: function(dataItem){
                    var urlHref = window.location.href.indexOf('fluent-eshop-voyago') > 0 ? window.location.host + "/fluent-eshop-voyago/Account/OrderDetails/" + dataItem.OrderNumber : "/Account/OrderDetails/" + dataItem.OrderNumber		
			        return  "<a href=" + urlHref +" class='view-order-link'>View Order</a>" 
                } 
            }

        ],
        noRecords: true,
        pageable:true,
        sortable: true,
        scrollable: true,
        dataSource: {                    
            transport: {                   
                read: {
		           	url: "/Account/GetAllOrders",
                    dataType: "json"
		        },
            },
            pageSize: 10,
            schema: {
                model: {
                    fields: {
                        OrderNumber: { type: "number" },
                        OrderDate: { type: "date" }
                    }
                }
            },                 
        }
    });

    $('#orders-grid .k-grid-pager').addClass('k-pager-sm')   
    $('#orders-grid .k-grid-pager').removeClass('k-pager-md')
      
    $(window).resize(function() {
    $('#orders-grid .k-grid-pager').addClass('k-pager-sm')   
    $('#orders-grid .k-grid-pager').removeClass('k-pager-md')
    });
})
</script>

