@{
	ViewData["Title"] = "Index";
}

<div class="contacts-container">
    <div class="header-contacts">
        <h1>Contacts</h1>
    </div>
    <form class="contact-form"></form>


    <div class="location">
        <div class="location-message">

            <label>United States<br>
                932 Clousson Road Str<br>
                Sergeant Bluff, Iowa<br>
                712-923-1916<br>
                51054United States<br>
                932 Clousson Road Str<br>
                Sergeant Bluff, Iowa<br>
                712-923-1916<br>
                51054</label>

        </div>
        <div class="map"></div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".contact-form").kendoForm({
            formData: {
                Name: "",
                Email: "",
                Message: ""
            },
            buttonsTemplate: "<button class='k-button contacts-button k-button-lg k-rounded-lg k-button-solid k-button-solid-primary k-form-submit'>Submit</button>",
            items: [{
                        field: "Name",
                        label: "Name",
                        validation: { required: true }
                    },
                    {
                        field: "Email",
                        label: "Email",
                        validation: { required: true }
                    },
                    {
                        field: "Message",
                        label: "Message",
                    },
                    {
                        field: "Captcha", label: "", validation: { required: true }, attributes: {style: "width: 280px" },
                        hint: "Type the characters you see in the picture above.",
                        editor: "Captcha", editorOptions: {
                        handler: "/Contacts/Reset_Events",                         
                        audioButton: false,
                        validationHandler: "/Contacts/Validate_Events",
                        error: function (data) {
                            console.log(data);
                        }
                    }
                }],
                 submit: function (e) {
                    e.preventDefault();
                    validationSuccess.html("<div class='k-messagebox k-messagebox-success'>Form data is valid!</div>");
                },
        });

        $(".map").kendoMap({
            center: [42.37189476506107, -96.35231099817473],
            zoom: 3,
            layers: [{
                type: "tile",
                urlTemplate: "https://#= subdomain #.tile.openstreetmap.org/#= zoom #/#= x #/#= y #.png",
                subdomains: ["a", "b", "c"],
            }],
            markers: [{
                location: [42.37189476506107, -96.35231099817473],
                shape: "pinTarget",
                tooltip: {
                    content: "Iowa"
                }
            }]
        });  
    });
</script>

<link rel="stylesheet" href="/css/contacts.css">


